<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBindingCommand.Views.UsuarioView"
             Title="UsuarioView">
    <VerticalStackLayout>
        
        <Entry Text="{Binding Name}" Placeholder="Digite seu nome" />
        
        <Label Text="{Binding DisplayName}" />

        <Label Text="{Binding DisplayMessage}" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>

        <Button Command="{Binding ShowMessageCommand}" Text="Mensagem"/>
        
    </VerticalStackLayout>
</ContentPage>